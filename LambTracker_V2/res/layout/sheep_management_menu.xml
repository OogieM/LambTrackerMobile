<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SheepManagementMenu" >

   <GridLayout 
        	android:id="@+id/sheeptasks"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
        	android:columnCount="2"
       		android:rowCount="7"> 
   	 	<Button
            android:id="@+id/sheep_management_btn"
            android:layout_width="175dp"
            android:layout_height="75dp"           
            android:onClick="sheepManagement"
            android:layout_column="0"
            android:layout_row="0"
            android:text="@string/title_activity_sheep_management"
            android:textSize="18sp" />  
        <Button
            android:id="@+id/lambing_btn"
            android:layout_width="175dp"
            android:layout_height="75dp"           
            android:onClick="lambingSheep"
            android:layout_column="0"
            android:layout_row="1"
            android:text="@string/title_activity_lambing_sheep"
            android:textSize="18sp" /> 
                
        <Button
            android:id="@+id/group_sheep_management_btn"
            android:layout_width="175dp"
            android:layout_height="75dp"           
            android:onClick="groupSheepManagement"
			android:layout_column="1"
            android:layout_row="0"
            android:text="@string/title_activity_group_sheep_management"
            android:textSize="18sp" />
           
  		<Button
            android:id="@+id/draw_blood_btn"
            android:layout_width="175dp"
            android:layout_height="75dp"           
            android:onClick="drawBlood"
            android:layout_column="0"
            android:layout_row="2"
            android:text="@string/title_activity_draw_blood"
            android:textSize="18sp" /> 
        
  		<Button
            android:id="@+id/sort_sheep_btn"
            android:layout_width="175dp"
            android:layout_height="75dp"           
            android:onClick="sortSheep"
            android:layout_column="0"
            android:layout_row="3"
            android:text="@string/title_activity_sort_sheep"
            android:textSize="18sp" />  
       <Button
            android:id="@+id/evaluate_sheep_btn"
            android:layout_width="175dp"
            android:layout_height="75dp"           
            android:onClick="evaluateSheep"
            android:layout_column="0"
            android:layout_row="4"
            android:text="@string/title_activity_evaluate_sheep"
            android:textSize="18sp" />    

       <Button
            android:id="@+id/remove_sheep_btn"
            android:layout_width="175dp"
            android:layout_height="75dp"           
            android:onClick="removeSheep"
            android:layout_column="0"
            android:layout_row="5"
            android:text="@string/title_activity_remove_sheep"
            android:textSize="18sp" />   
            
       <Button
            android:id="@+id/remove_drug_btn"
            android:layout_width="175dp"
            android:layout_height="75dp"           
            android:onClick="removeDrug"
            android:layout_column="1"
            android:layout_row="5"
            android:text="@string/title_activity_remove_drug"
            android:textSize="18sp" />   
	</GridLayout>
</RelativeLayout>
