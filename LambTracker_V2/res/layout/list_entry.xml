        android:id="@+id/tag_number"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:textSize="18sp" />
  	<TextView
        android:id="@+id/tag_color_name"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:textSize="18sp" />
  	<TextView
