<RelativeLayout  android:id="@+id/RelativeLayout01"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity" 
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">
	
    <Spinner
  	  android:id="@+id/select_sheep_task"
  	  android:layout_width="fill_parent"
  	  android:layout_height="wrap_content"
  	  />
    
    <Button
        android:id="@+id/quit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/select_sheep_task"
        android:layout_marginLeft="29dp" 
        android:layout_below="@+id/select_sheep_task"
        android:onClick="quitApp"
        android:text="@string/quit_btn" />
   
	<TextView
  	  android:id="@+id/textInfo2"
  	  android:layout_width="wrap_content"
  	  android:layout_height="wrap_content"
  	  android:layout_alignParentRight="true"
 	  android:layout_below="@+id/quit_btn"
  	  android:padding="2sp"
  	  android:text="-"
   	  android:textColor="#FF0000"
  	  android:textSize="24sp" />

	<TextView
    android:id="@+id/textInfo1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/textInfo2"
    android:layout_alignParentRight="true"
    android:padding="1sp"
    android:text="-"
    android:textColor="#FF0000"
    android:textSize="24sp" />
	
<TextView
    android:id="@+id/textStat"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/textInfo1"
    android:layout_marginTop="15dp"
    android:padding="2sp"
    android:text="Disconnected"
    android:textColor="#FF0000"
    android:textSize="24sp" />

<Button
    android:id="@+id/btnService"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/textStat"
    android:text="Unknown"
    android:textSize="24sp" />

<TextView
    android:id="@+id/textBytes"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/textInfo2"
    android:gravity="center_vertical|center_horizontal"
    android:padding="2sp"
    android:textColor="#FF0000"
    android:textSize="20sp" />

<ScrollView android:id="@+id/svLog" 
    android:layout_width="fill_parent" 
    android:layout_below="@+id/btnService"
    android:layout_height="100dp" 
    android:textColor="#FF0000" > 
</ScrollView>

<TextView android:id="@+id/textLog" 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:textSize="18sp"
    android:text="Loading..."
    android:textColor="#FF0000"/>

<ImageView
    android:id="@+id/logo_image"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:src="@drawable/logo" />

</RelativeLayout>


        