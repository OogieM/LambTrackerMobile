        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:textSize="18sp" />
  	<TextView
        android:id="@+id/idtype_name"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textSize="18sp" />
       
</LinearLayout>