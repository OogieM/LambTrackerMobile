<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DesktopFunctionsMenu" >

    <Button
            android:id="@+id/set_alerts_btn"
            android:layout_width="250dp"
            android:layout_height="75dp"           
            android:onClick="setAlerts"
            android:text="@string/title_activity_set_alert"
            android:textSize="18sp" />  
            
    <Button
            android:id="@+id/create_ram_breeding_record_btn"
            android:layout_width="250dp"
            android:layout_height="75dp"           
            android:onClick="createRamBreedingRecord"
            android:layout_below="@+id/set_alerts_btn"
            android:text="@string/title_activity_ram_breeding_record"
            android:textSize="18sp" /> 

    <Button
            android:id="@+id/create_ewe_breeding_record_btn"
            android:layout_width="250dp"
            android:layout_height="75dp"           
            android:onClick="createEweBreedingRecord"
            android:layout_below="@+id/create_ram_breeding_record_btn"
            android:text="@string/title_activity_ewe_breeding_record"
            android:textSize="18sp" /> 
            
    <Button
            android:id="@+id/drug_management_btn"
            android:layout_width="250dp"
            android:layout_height="75dp"           
            android:onClick="drugManagement"
            android:layout_below="@+id/create_ewe_breeding_record_btn"
            android:text="@string/title_activity_drug_management"
            android:textSize="18sp" /> 
</RelativeLayout>
